<h4>More information about: {{model.text}}<br> By: {{model.author}}<br> Notes: {{model.notes}}</h4>

{{#each model.answers as |answer|}}
  <li>{{answer.text}} By: {{answer.author}} Posted: {{current-date answer.date}}</li>
{{/each}}


{{new-answer question=model saveAnswer="saveAnswer"}}
<button {{action 'delete' model}}>Delete</button>
{{update-question model=model update="update"}}
