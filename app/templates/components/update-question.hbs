{{#if updateQuestionForm}}

<h4>Update {{model.text}}?</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="text">Question</label>
        {{input value=text id="text" placeholder=model.text}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=model.author}}
      </div>
      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes" placeholder=model.notes}}
      </div>
     <button {{action 'update'}}>Save Changes</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
